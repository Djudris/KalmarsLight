{% set customClass = widget.settings.customClass.mobile %}
{% set title          = widget.settings.title.mobile %}
{% set hasPlaceholder = widget.settings.texts | length <= 0 %}

<div class="widget widget-list{% if hasPlaceholder %} widget-placeholder{% endif %}{% if customClass | length > 0 %} {{ customClass }}{% endif %}">
    <div class="widget-inner">
        <h2 class="h5">{{ title }}</h2>
        <ul class="list-container">
            {% for entry in widget.settings.texts.mobile %}
                <li>
                    {% if widget.settings.icon.mobile != "none" %}
                        <i class="fa {{ widget.settings.icon.mobile }}" aria-hidden="true"></i>
                    {% endif %}

                    {{ entry }}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
